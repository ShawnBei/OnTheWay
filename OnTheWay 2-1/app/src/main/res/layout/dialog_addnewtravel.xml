<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialogbackground"
    >

    <TextView
        android:id="@+id/newTripLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="@string/new_trip"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        />

    <EditText
        android:id="@+id/inutNewTripName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:ems="15"
        android:hint="Trip Location"
        android:drawableLeft="@drawable/ic_location_on_black_24dp"
        android:inputType="textPersonName"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#607D8B"/>

    <TextView
        android:id="@+id/inputNewTripDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="30dp"
        android:drawableLeft="@drawable/ic_today_grey_24dp"
        android:hint="Trip Date"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#607D8B"/>

    <EditText
        android:id="@+id/addBudget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:ems="15"
        android:hint="Trip Budget"
        android:drawableLeft="@drawable/ic_monetization_on_grey_24dp"
        android:inputType="number"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#607D8B"/>

    <Button
        android:id="@+id/confirmButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:background="@drawable/backgroundlogin"
        android:clickable="true"
        android:padding="16dp"
        android:text="ADD"
        android:textAllCaps="false"
        android:textColor="#FFB74D"
        android:textSize="25dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/backgroundsignup"
        android:clickable="true"
        android:padding="16dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:text="CANCEL"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="25dp"
        android:textStyle="bold" />

</LinearLayout>